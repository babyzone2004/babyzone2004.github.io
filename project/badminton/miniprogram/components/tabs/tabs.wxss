.weui-tabs {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.weui-tabs-bar__wrp {
  position: relative;
  z-index: 1;
  margin-top: 0;
  width: 100%;
  background: var(--weui-BG-2);
  box-shadow: 0 1px 5px rgb(204 204 204 / 60%);
}

.weui-tabs-bar__content {
  width: 100%;
  white-space: nowrap
}

.weui-tabs-bar__item {
  display: inline-block;
}

.weui-tabs-bar__title {
  display: inline-block;
  padding: 16rpx 4rpx 12rpx;
  border-bottom-style: solid;
  border-bottom-width: 2px;
  border-bottom-color: transparent;
}

.weui-tabs-bar__wrp ::-webkit-scrollbar{
  display:none;
  width:0;
  height:0;
  color:transparent;
}

swiper-item {
  overflow-y: auto;
}