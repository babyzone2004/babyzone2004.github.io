.loading {
  position: relative;
  display: inline;

  /* width: 30rpx; */
}

.loading-icon {
  display: inline;
}

.ani1, .ani2{
  animation: ani .8s linear infinite;
}

.ani1 {
  animation-delay: -0.3s;
}

.ani2 {
  animation-delay: -0.15s;
}

@keyframes ani {
  0% {
    opacity: 0; transform: scale(1.2);
  }

  100% {
    opacity: 1; transform: scale(1);
  }
}
